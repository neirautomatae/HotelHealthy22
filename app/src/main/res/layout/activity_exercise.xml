<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba"
    tools:context=".Exercise">

    <Button
        android:id="@+id/btnbackHealth"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bk44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnbackexhome"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bk55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnyoga2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/yogacilp2"
        app:layout_constraintStart_toStartOf="@+id/btnyoga1"
        app:layout_constraintTop_toBottomOf="@+id/btnyoga1" />

    <Button
        android:id="@+id/btnyoga1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/yogacilp1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/btnyoga3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/yogacilp3"
        app:layout_constraintStart_toStartOf="@+id/btnyoga2"
        app:layout_constraintTop_toBottomOf="@+id/btnyoga2" />

    <Button
        android:id="@+id/btnyoga4"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/yogacilp4"
        app:layout_constraintStart_toStartOf="@+id/btnyoga3"
        app:layout_constraintTop_toBottomOf="@+id/btnyoga3" />

</androidx.constraintlayout.widget.ConstraintLayout>