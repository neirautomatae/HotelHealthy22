<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eaa"
    tools:context=".Safety">

    <Button
        android:id="@+id/btnbacksafety"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/iconwork"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="570dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/viewbell"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:background="@drawable/iconbellboy" />

            <Button
                android:id="@+id/cilb1"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/iconcilpbellboy" />

            <TextView
                android:id="@+id/viewroom"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:background="@drawable/iconroom" />

            <Button
                android:id="@+id/cilb2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/clib2" />

            <Button
                android:id="@+id/cilb3"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/clib3" />

            <Button
                android:id="@+id/cilb4"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/clib4"
                android:layout_marginStart="50dp" />

            <TextView
                android:id="@+id/vieweven"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/iconeven" />

            <Button
                android:id="@+id/cilb5"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/clib5"
                android:layout_marginStart="50dp" />

            <Button
                android:id="@+id/cilb6"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/clib6"
                android:layout_marginStart="50dp" />

            <Button
                android:id="@+id/clib7"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/clib7"
                android:layout_marginStart="50dp" />

            <Button
                android:id="@+id/clib8"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/clib8"
                android:layout_marginStart="50dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>